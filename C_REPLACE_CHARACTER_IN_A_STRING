/*Program to Replace character in a string*/
#include<stdio.h>
#include<stdlib.h>
#include<conio.h>
void main()
{
char str[50],ch1,ch2;
int i;
clrscr();
printf("\n  Enter String : ");
scanf("%[^\n]s",str);
fflush(stdin);

printf("\n Enter Character to Find : ");
scanf("%c",&ch1);
fflush(stdin);

printf("\n Enter Character to Replace : ");
scanf("%c",&ch2);

for(i=0;str[i]!='\0';i++)
{
 if(str[i]==ch1)
 {
     str[i]=ch2;
 }
}
printf("\n Final String = %s",str);
getch();
}
