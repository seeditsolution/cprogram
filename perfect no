#include<stdio.h>
#include<conio.h>
#include<math.h>
void main()
{
    int i, n, s = 0;
    clrscr() ;
    printf("Enter a number : ");
    scanf("%d", &n) ;
    for(i = 1 ; i < n ; i++)
    {
        if(n % i == 0)
        s = s + i;
    }
    if (s == n)
    printf("\n%d is a perfect number", n);
    else
    printf("\n%d is not a perfect number", n);
    getch();
}
