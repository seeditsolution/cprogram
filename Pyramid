#include <stdlib.h>
#include <stdio.h>	
main()
{
      int n,i,j;
      printf("Enter the number upto which pyramid is to be printed");
      scanf("%d",&n);
    	 for(i=0;i<n;i++)
    	 {
    		 for(j=0;j<n-i-1;j++)
    			 printf(" ");
    		 for(j=i+1;j>=1;j--)
    			 printf("%d",j);
    		 for(j=2;j<=i+1;j++)
    			printf("%d",j);
    	      printf("\n");
         }
		
}
