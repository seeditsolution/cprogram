 gotoxy(26,1);
 //printf("mouse demonstration program");
 if(initmouse()==0)
  {
   closegraph();
   restorecrtmode(); //to go back to normal graphics mode or deleting
viewport.
   printf("
mouse driver not loaded");
   exit(1);
