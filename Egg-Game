 restrictmouseptr(0,getmaxy()-20,maxx,getmaxy()-15);
 //showmouseptr();
 //gotoxy(1,2);
 //printf("left button");
 //gotoxy(15,2);
 //printf("right button");
 //printf("press any key to exit....");
 int a=30;int b=0;
 setcolor(0);
 setfillstyle(1,15);
 int score=0;
 count=20;
 int s=5;
 int level=0;
 char name[40];
 gotoxy(5,2);
