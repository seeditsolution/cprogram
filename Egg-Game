  int initmouse();
  int restrictmouseptr(int,int,int,int);
  int getmousepos(int *,int *,int *);
  int showmouseptr();
 int gd=DETECT,gm,maxx,maxy,x,y,button;
 initgraph(&gd,&gm,"c:\turboc3\bin");

 //circle(100,100,40);

 int count=0;
