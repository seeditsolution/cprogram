// C Program to find the minimum scalar product of two vectors (dot product) USING POINTERS
#include<stdio.h>
#include<stdlib.h>
int i,j,temp;
int* createarray(int);
int getelements(int*,int);
int ascending(int*,int);
int minscalar(int*,int*,int);
int main()
{
	int n,*a,*b;
	scanf(“%d”,&n);
	a=createarray(n);
	getelements(a,n);
	b=createarray(n);
	getelements(b,n);
	ascending(a,n);
	ascending(b,n);
	minscalar(a,b,n);
	return 0;
}
int* createarray(int n)
{
	int *a;
	a=(int*)malloc(n*sizeof(int));
	return a;
}
int getelements(int *a,int n)
{
	for(i=0;i<n;i++)
	scanf(“%d”,a+i);
	return 0;
}
int ascending(int *a,int n)
{
	for(i=0;i<n;i++)
		{
			for(j=i+1;j<n;j++)
				{
					if(*(a+i)>*(a+j))
						{
							temp=*(a+i);
							*(a+i)=*(a+j);
							*(a+j)=temp;
						}
				}
		}			
	return 0;
}
int minscalar(int *a,int *b,int n)
{
int sum=0,p,q;
	for(i=0;i<n;i++)
		{
			p=*(a+i);
			q=*(b+n-1-i);
			sum=sum+(p*q);
		}
	
		printf(“%d”,sum);
		return 0;
}	
